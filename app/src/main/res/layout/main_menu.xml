<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMenuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/emailPageMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxWidth="120dp"
        android:text="@string/weekly_emails" />

    <Button
        android:id="@+id/broadcastPageMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxWidth="120dp"
        android:text="@string/broadcast_log" />

    <Button
        android:id="@+id/sermonsPageMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxWidth="120dp"
        android:text="@string/sermons" />

    <Button
        android:id="@+id/settingsPageMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:width="200dip"
        android:maxWidth="120dp"
        android:text="@string/settings" />

</LinearLayout>